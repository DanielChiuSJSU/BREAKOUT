/*
 * main.cpp: Breakout game
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "xtime_l.h"
#include "sleep.h"


void print_float(double d){
	long int integer = (long int)d;
	double fraction = d - integer;
	fraction = (fraction < 0.0) ? -fraction : fraction;
	int trunc = (int)(fraction * 1000);

	xil_printf("%ld.%d", integer, trunc);
}

//this hello world project should be used for testing
int main() {
	//The PMU's Global Counter increments every 2 CPU cycles
	//XTime_Get_Time() just reads from the Global Counter
	XTime time_start, time_end, time_diff;

	//ms = millisecond (1 / 1,000 s)
	//us = microsecond (1 / 1,000,000 s)
	//ns = nanosecond (1 / 1,000,000,000 s)
	double elapsed_ms, elapsed_us;
//	unpacked_float unpacked_ms, unpacked_us;

    init_platform();

    XTime_GetTime(&time_start);

    print("\n\r==================== START ====================\n\r");
    print("Hello World\n\r");
    print("Successfully ran Hello World application\n\r");

    //NOTE: the global timer counter
    print("Sleeping for 1 second\n\r");
    sleep(1);
    print("Wake up!\n\r");

    XTime_GetTime(&time_end);
    xil_printf("Time Start: %llu\n\r", time_start);
    xil_printf("Time End: %llu\n\r", time_end);
    time_diff = time_end - time_start;

    //COUNTS_PER_SECOND macro already incorporates the 0.5x counter modifier
    elapsed_us = 1000000.0 / COUNTS_PER_SECOND * time_diff;
    elapsed_ms = elapsed_us / 1000.0;

    //333,333,343
//    xil_printf("COUNTES_PER_SECOND: %llu \n\r", COUNTS_PER_SECOND);
//    unpacked_us = unpack_float(elapsed_us);
//    unpacked_ms = unpack_float(elapsed_ms);
//    xil_printf("Elapsed Microseconds: %lld.%u \n\r", unpacked_us.integer, unpacked_us.fractional);
//    xil_printf("Elapsed Milliseconds: %lld.%u \n\r", unpacked_ms.integer, unpacked_ms.fractional);
    xil_printf("10/4 = ");
    print_float(10.0 / 4.0);
    xil_printf("\n\r");
    xil_printf("10/4 = ");
	print_float(-5.0/4.0);
	xil_printf("\n\r");


    cleanup_platform();
    return 0;
}
