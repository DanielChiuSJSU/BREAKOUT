/*
 * main.cpp: Breakout game
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include <stdlib.h>

#include "platform.h"
#include "xil_printf.h"
#include "xtime_l.h"
#include "sleep.h"

//microseconds per count (1 second = 1,000,000 microseconds)
//COUNTS_PER_SECOND is 333,333,343 so us_per_count is around .003
const double us_per_count = 1000000.0 / COUNTS_PER_SECOND;

//xil_printf doesn't support floats
void print_float(double d){
	char str[100];
	sprintf(str, "%f\n\r", d);
	xil_printf(str);
}

//this hello world project should be used for testing
int main() {
	//The PMU's Global Counter increments every 2 CPU cycles
	//XTime_Get_Time() just reads from the Global Counter
	XTime time_start, time_end;
	long int time_diff;

	//ms = millisecond (1 / 1,000 s)
	//us = microsecond (1 / 1,000,000 s)
	double elapsed_ms, elapsed_us;

    init_platform();

    XTime_GetTime(&time_start);

    xil_printf("\n\r==================== START ====================\n\r");
    xil_printf("Hello World\n\r");
    xil_printf("Successfully ran Hello World application\n\r");

    //666,666,687 / 2 = 333,333,343
	xil_printf("COUNTS_PER_SECOND: %llu \n\r", COUNTS_PER_SECOND);
	//(us / count) = (1 million us per s) * (seconds / count)
	xil_printf("us_per_count: ");
	print_float(us_per_count);

    //NOTE: the global timer counter
    print("Sleeping for 1 second\n\r");
    sleep(1);
    print("Wake up!\n\r");

    XTime_GetTime(&time_end);
    xil_printf("Time Start: %llu\n\r", time_start);
    xil_printf("Time End: %llu\n\r", time_end);

    time_diff = time_end - time_start;
    xil_printf("Time Elapsed: %ld\n\r", time_diff);

    elapsed_us = time_diff * us_per_count;
    elapsed_ms = elapsed_us / 1000.0;
    xil_printf("Elapsed us: ");
    print_float(elapsed_us);
    xil_printf("Elapsed ms: ");
    print_float(elapsed_ms);

    xil_printf("\n\r");

    cleanup_platform();
    return 0;
}
